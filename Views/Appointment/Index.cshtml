@{
    ViewData["Title"] = "Appointment";
}


<div class="container"> 
    <h1>Make an Appointment</h1>
    <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" id="name">
    </div>

    <div class="mb-3">
    <label for="phone" class="form-label">Mobile</label>
    <input type="number" class="form-control" id="phone">
    </div>

    <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email">
    </div>

    <div class="dropdown mb-3">
  <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Category
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-item" href="#">Neurology</a></li>
    <li><a class="dropdown-item" href="#">Dentistry</a></li>
    <li><a class="dropdown-item" href="#">Cardilogy</a></li>
    <li><a class="dropdown-item" href="#">Pediatrick</a></li>
    <li><a class="dropdown-item" href="#">Diagnostics</a></li>
    <li><a class="dropdown-item" href="#">Traumatalogy</a></li>
  </ul>
</div>
<div class="dropdown mb-3">
  <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Gender
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-item" href="#">Male</a></li>
    <li><a class="dropdown-item" href="#">Female</a></li>
    <li><a class="dropdown-item" href="#">Other</a></li>
  </ul>
</div>

    <div class="mb-3">
    <label for="date" class="form-label">Select Date</label>
    <input type="date" class="form-control" id="name">
    </div>

    <button type="submit" class="btn btn-primary">Make an Appointment</button>
</div>